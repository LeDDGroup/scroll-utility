{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",

    "jsx": "react",
    "declaration": false,
    "skipLibCheck": true,

    "sourceMap": true,

    "outDir": "./dist",
    "rootDir": "./",

    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "types": ["../dist/index"],

    "esModuleInterop": true
  },
    "exclude": ["webpack.config.ts"]
}
