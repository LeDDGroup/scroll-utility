{
  "name": "scroll-utility",
  "description": "A simple to use scroll utility package for centering elements, and smooth animations",
  "types": "dist/browser.d.ts",
  "main": "dist/scroll-utility.js",
  "scripts": {
    "start": "webpack-dev-server --config webpack.config.ts --env.NODE_ENV=development --open",
    "build": "webpack --config webpack.config.ts --env.NODE_ENV=production",
    "check": "tsc --noEmit",
    "check-watch": "tsc --noEmit --watch",
    "format": "prettier --write \"**/*.{js,ts,tsx,md,yml,json}\"",
    "prebuild": "rm -rf dist",
    "prepare": "npm run build",
    "semantic-release": "semantic-release",
    "test": "mocha --exit -r ts-node/register ./test/automate/index.ts --timeout 15000 --retries 3",
    "start-demo": "webpack-dev-server --config demo/webpack.config.ts --env.NODE_ENV=development",
    "build-demo": "webpack --config demo/webpack.config.ts --env.NODE_ENV=production",
    "deploy-demo": "npm run build-demo && gh-pages -d demo/dist",
    "travis-deploy-once": "travis-deploy-once"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lynt && pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lynt": {
    "typescript": true,
    "rules": {
      "await-promise": "off",
      "no-console": "on"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LeDDGroup/scroll-utility.git"
  },
  "keywords": [
    "scroll",
    "smooth",
    "simple",
    "center",
    "scrolling",
    "centering"
  ],
  "author": "David Perez Alvarez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LeDDGroup/scroll-utility/issues"
  },
  "homepage": "https://github.com/LeDDGroup/scroll-utility#readme",
  "devDependencies": {
    "@commitlint/cli": "^7.2.0",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.5",
    "@types/mocha": "^5.2.5",
    "@types/node": "^9.6.0",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "@types/selenium-webdriver": "^3.0.10",
    "@types/webpack": "^4.4.17",
    "copy-webpack-plugin": "^4.5.4",
    "css-loader": "^1.0.0",
    "expect": "^23.6.0",
    "express": "^4.16.3",
    "gh-pages": "^2.0.1",
    "html-webpack-include-assets-plugin": "^1.0.6",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.1.1",
    "lynt": "^0.5.3",
    "mocha": "^5.2.0",
    "prettier": "^1.14.3",
    "pretty-quick": "^1.7.0",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "selenium-webdriver": "^4.0.0-alpha.1",
    "semantic-release": "^15.9.17",
    "style-loader": "^0.23.1",
    "travis-deploy-once": "^5.0.9",
    "ts-loader": "^5.2.2",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.2",
    "webpack": "^4.22.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "dependencies": {}
}
