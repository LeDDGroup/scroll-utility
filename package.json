{
  "name": "scroll-utility",
  "version": "1.1.1-development",
  "description": "A simple to use scroll utility package for centering elements, and smooth animations",
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build-package && npm run build-browser",
    "build-browser": "parcel build -d dist -o bundle.js src/bundle.ts ",
    "build-package": "tsc",
    "check": "tsc --noEmit",
    "check-watch": "tsc --noEmit --watch",
    "dev": "parcel ./test/local/index.html",
    "format": "pretty-quick",
    "prebuild": "rm -rf dist",
    "semantic-release": "semantic-release",
    "test": "mocha --exit -r ts-node/register ./test/automate/index.ts",
    "travis-deploy-once": "travis-deploy-once"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LeDDGroup/scroll-utility.git"
  },
  "keywords": [
    "scroll",
    "smooth",
    "simple",
    "center",
    "scrolling",
    "centering"
  ],
  "author": "David Perez Alvarez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LeDDGroup/scroll-utility/issues"
  },
  "homepage": "https://github.com/LeDDGroup/scroll-utility#readme",
  "devDependencies": {
    "@commitlint/cli": "^7.2.0",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/chai": "^4.1.2",
    "@types/delay": "^2.0.1",
    "@types/express": "^4.16.0",
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.6.0",
    "@types/selenium-webdriver": "^3.0.10",
    "awesome-typescript-loader": "^5.2.0",
    "chai": "^4.1.2",
    "delay": "^2.0.0",
    "express": "^4.16.3",
    "husky": "^1.1.1",
    "mocha": "^4.1.0",
    "parcel-bundler": "^1.9.7",
    "prettier": "^1.14.3",
    "pretty-quick": "^1.7.0",
    "selenium-webdriver": "^4.0.0-alpha.1",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.2",
    "semantic-release": "^15.9.17",
    "travis-deploy-once": "^5.0.9",
    "webpack": "^4.17.1",
    "webpack-command": "^0.4.1"
  },
  "dependencies": {}
}
